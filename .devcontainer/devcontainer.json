{
    "name": "Containerlab Dev",
    "build": {
      "dockerfile": "../Dockerfile"
    },
    "runArgs": [
      "--privileged",
      "--network=host"
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/clab/workspace,type=bind",
    "workspaceFolder": "/home/clab/workspace",
    "postCreateCommand": "echo 'Containerlab listo. Usa cd labs && sudo containerlab deploy -t simple-lab.clab.yml'",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-azuretools.vscode-docker"
        ]
      }
    },
    "hostRequirements": {
      "cpus": 4,
      "memory": "8gb",
      "storage": "32gb"
    }
  }
  